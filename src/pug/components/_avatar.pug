mixin avatar(isBig,isEditable,withBorder)
  .avatar(
  style=`background-image:url(https://source.unsplash.com/random/800x600)`
  class=`
    ${isBig ? 'is-big' : ''}
    ${isEditable ? 'is-editable' : ''}
    ${withBorder ? 'with-border' : ''}`
  )
    if isEditable
      label.avatar__label Click for Upload Photo
        input.avatar__input(type="file")
